# Generated by Chef for <%= node[:fqdn] %>.

CREATE DATABASE IF NOT EXISTS <%= @mysql_database %>;
GRANT <%=@mysql_priviledges%> ON <%= @mysql_database %>.* TO `<%= @mysql_username %>`@`localhost` IDENTIFIED BY '<%= @mysql_password %>';

# Set the server root password. This should be preseeded by the package installation.
SET PASSWORD FOR '<%= @mysql_username %>'@'localhost' = PASSWORD('<%= @mysql_password %>');
FLUSH PRIVILEGES ;
